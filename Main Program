#include <LiquidCrystal_I2C.h>
#include <SoftwareSerial.h>
SoftwareSerial komunikasi(14,12); //RX dan TX
LiquidCrystal_I2C lcd(0x27, 16, 2); //menggunakan LCD 16x2
//variabel state
int state = 0;
void setup() {
  Serial.begin(9600);
  komunikasi.begin(9600);
  lcd.init();
  lcd.backlight();
  lcd.setCursor(1, 0);
  lcd.print("LIGHT MOVEMENT");
  lcd.setCursor(6, 1);
  lcd.print("JAR");
  delay(3000);
  lcd.clear();
}
void loop() {
  if(komunikasi.available() > 0){
    state=komunikasi.read();
     lcd.setCursor(1, 0);
     lcd.print("Pembacaan Data");
     lcd.setCursor(6, 1);
     lcd.print(state);
     Serial.println(state);
  }
  delay(500);
  lcd.clear();
}
