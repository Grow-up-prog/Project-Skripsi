#include <SoftwareSerial.h>
SoftwareSerial dataRelay(D1,D2);//RX TX
//variabel
String data;
char c;
void setup() {
  Serial.begin(9600);
  dataRelay.begin(9600);
}
void loop() {
  if (dataRelay.available() > 0){
    data = dataRelay.read();
    Serial.println("Terima Data = "+data);
    if (data == "3"){
      Serial.println("relay aktif");
    }
  }
}
